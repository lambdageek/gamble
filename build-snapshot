#! /bin/bash

if [ "z$1" == z ] ; then
    echo "USAGE: $0 [git commit id [flavor name]]"
    exit 1
fi
GITID=$1

if [ "z$2" == z ]; then
    FLAVOR=$GITID
else
    FLAVOR=$2
fi

NAME=gamble-snapshot

PREFIX=$NAME-git-$FLAVOR

git archive --prefix="$PREFIX/" --format=tar.gz -o "$PREFIX.tar.gz" $GITID
